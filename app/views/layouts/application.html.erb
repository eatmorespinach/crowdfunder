<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
 
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class = 'navbar'>
    <ul>
      <% if request.fullpath == root_path %>
        <li class="active">
      <% else %>
        <li>  
      <% end %>
          <%= link_to "Home", root_path %>
        </li>
      <% if request.fullpath == projects_path || request.fullpath == project_path(@project) %>
        <li class="active">
      <% else %>
        <li>       
      <% end %>
         <%= link_to "Projects", projects_path %>
        </li>

        <li>
          <% if current_user %>
            <%= link_to "Logout", session_path('current'), :method => :delete %>
          <% else %>
            <%= link_to "Sign Up", new_user_path %>
          <% end %>
        </li>
    </ul>
  </div>

  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice]%>  
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
<%= yield %>
<%= link_to "bobob", my_projects_path %>
</body>
</html>